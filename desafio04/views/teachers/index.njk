{% extends "layout.njk" %}

{% block styles %}
     <link rel="stylesheet" href="/styles/card.css">
    <link rel="stylesheet" href="/styles/input.css">
    <link rel="stylesheet" href="/styles/index.css">
{% endblock styles %}


{% block head %}
        <title>School - Index </title>
{% endblock head %}

{% block content %}

<div class="card table-container">
   <a href="/teachers/create">Novo</a>
   <table width="100%">
       <thead>
           <tr>
               <th>Nome completo</th>
               <th>Acompanhamento</th>
               <th>Ação</th>
           </tr>
       </thead>
       <tbody>
        {% for teacher in teachers %}
                <tr>
                    <td>
                        <span style="background-image: url({{teacher.avatar_url}})"></span>    
                        {{teacher.name}}</td>
                        <td> {% for service in teacher.services.split(",") %}<span class="table-services">{{service}}</span>{% endfor %}</td> 
                    <td><a href="/teachers/{{teacher.id}}">ver</a></td>
                </tr>
        {% endfor %}
       </tbody>
   </table>
</div>



{% endblock content %}