<div>

    <div class="item">
        <div>Avatar URL</div>
        <div>
            <input type="url" name="avatar_url" placeholder="http://" value="{{teacher.avatar_url}}">
        </div>
    </div>

    <div class="item">
        <div>Nome completo</div>
        <div>
            <input type="text" name="name" placeholder="Nome do Professor" value="{{teacher.name}}">
        </div>
    </div>

    <div class="item">
        <div>Data de nascimento</div>
        <div>
            <input type="date" name="birth" value="{{teacher.birth}}">
        </div>
    </div>

    <div class="item">
        <div>Grau de escolaridade</div>
        <div>
            <select name="select" id="select">
                <option value="" selected="selected" disabled="disabled">Selecione uma opção</option>
                <option value="medio">Ensino Médio Completo</option>
                <option value="completo">Ensino Superior Completo</option>
                <option value="mestrado">Mestrado</option>
                <option value="doutorado">Doutorado</option>
            </select>
        </div>
    </div>

    <div class="item">
        <div>Tipo de aula</div>
        <div>
            <span>
                <input type="radio" name="classe" value="P" {% if teacher.classe == "P"  %} checked="checked" {% endif %}>Presencial
            </span>
            <span>
                <input type="radio" name="classe" value="A" {% if teacher.classe == "A"  %} checked="checked" {% endif %}>À distância
            </span>
        </div>
    </div>

    <div class="item">
        <div>Área de atuação</div>
        <div>
            <input type="text" name="services" placeholder="Separe as matérias prestadas por vírgula" value="{{teacher.services}}">
        </div>
    </div>

    <button type="submit" class="salvar">Salvar</button>

</div>